<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivStory"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/ivStory"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvTitle"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/tvStreak"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/description"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/_0_40"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvFriends"
                android:layout_toLeftOf="@id/ivStar"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivStory"
                style="@style/SelectableItemBackground"
                android:transitionName="story"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/add_circle" />

            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/tvTitle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/tvFriends"
                android:tint="@color/lightOrange"
                android:visibility="visible"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/tvFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvTitle"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/ivFriends"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivFriends"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignRight="@+id/tvProgress"
                android:layout_alignTop="@+id/tvTitle"
                android:layout_marginTop="8dp"
                android:tint="@color/lightOrange"
                app:srcCompat="@drawable/friend" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>