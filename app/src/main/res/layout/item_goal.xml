<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCelebrate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:foregroundGravity="top"
            card_view:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/ivStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="story" />

        <Button
            android:id="@+id/btnStory"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/transparent" />

        <View
            android:id="@+id/vGradient"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/gradient"
            android:clickable="true" />

        <View
            android:id="@+id/rvGradient"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/reverse_gradient"
            android:clickable="true" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvProgress"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivStory"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/ivStory"
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/tvStreak"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/tvStreak"
            android:tint="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/tvFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_alignBottom="@id/tvStreak"
            android:layout_toStartOf="@+id/btnFriends"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnFriends"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/friend"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/ibAdd"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_above="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/add_circle"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvReaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvStreak"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/btnReaction"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:text="@string/_0" />

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ibAdd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="LET'S GET STARTED!"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnReaction"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="11dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/goals_react" />

    </RelativeLayout>
</android.support.v7.widget.CardView>