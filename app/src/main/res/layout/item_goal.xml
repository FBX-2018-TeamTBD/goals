<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivStory"
            android:transitionName="story"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnStory"
            android:layout_width="match_parent"
            style="@style/SelectableItemBackground"
            android:background="@color/transparent"
            android:layout_height="270dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/ivStory"
            android:clickable="true"
            android:background="@drawable/gradient" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvProgress"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivStory"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/_0_40"
            android:layout_marginBottom="11dp"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivStory"
            android:layout_alignLeft="@+id/ivStory"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/_0"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="9dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/ivStory"
            android:layout_toRightOf="@+id/tvStreak"
            android:tint="@color/white"
            android:visibility="visible"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/tvFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivStory"
            android:layout_toLeftOf="@id/ivFriends"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivFriends"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/ivStory"
            android:layout_alignRight="@id/ivStory"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="9dp"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/friend" />

        <Button
            android:id="@+id/btnFriends"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/ivStory"
            android:layout_alignRight="@id/ivStory"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="6dp"
            android:background="@color/transparent"
            android:text="" />

    </RelativeLayout>
</android.support.v7.widget.CardView>