<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        app:theme="@style/AppTheme"
        android:elevation="10dp"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/camera_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/ic_menu_camera"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="toCamera" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Goals"/>
            <Button
                android:id="@+id/add_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/ic_menu_add"
                android:backgroundTint="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:onClick="addGoal" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="selectImage"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivProfile"
        android:layout_below="@+id/ivProfile"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:textColor="@color/black"
        android:text="Username" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfile"
        android:layout_toRightOf="@+id/ivProfile"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:lines="2"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvProgress"
        android:layout_toRightOf="@id/tvProgress"
        android:layout_marginLeft="35dp"
        android:textAlignment="center"
        android:lines="2"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvProgress"
        android:layout_toRightOf="@+id/tvCompleted"
        android:layout_marginLeft="35dp"
        android:textAlignment="center"
        android:lines="2"
        android:textColor="@color/black"
        android:text="TextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGoals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvUsername"
        android:layout_marginTop="10dp" />

</RelativeLayout>