<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="false"
        tools:context=".ProfileActivity">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:background="@color/orange"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:contentInsetStartWithNavigation="0dp"
            android:elevation="10dp"
            android:fitsSystemWindows="false"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/menu"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/white"
                    android:onClick="openDrawer" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/goals"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/add"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:onClick="addGoal" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:onClick="selectImage"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProfile"
            android:layout_alignStart="@+id/ivProfile"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginTop="10dp"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProfile"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivProfile"
            android:fontFamily="@font/quicksand_regular"
            android:lines="2"
            android:text="@string/_0_current_ngoals"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvProgress"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/tvProgress"
            android:fontFamily="@font/quicksand_regular"
            android:lines="2"
            android:text="@string/_0_completed_ngoals"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvProgress"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/tvCompleted"
            android:fontFamily="@font/quicksand_regular"
            android:lines="2"
            android:text="@string/_0_nfriends"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGoals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvUsername"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_drawer"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true" />

</android.support.v4.widget.DrawerLayout>